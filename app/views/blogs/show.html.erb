<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %> </h2>
  <%= link_to 'Edit Post', edit_blog_path(@blog) if logged_in?(:site_admin) %>
  <p><%= @blog.body %></p>
  <%= link_to 'Back', blogs_path %>

  <!-- start of comment form -->
  <%= render 'comments/comment_form' %>

  <!-- end of comment form -->

  <!-- start of comment -->
  <%= render @blog.comments %>
  <!-- end of comment -->
</div>
