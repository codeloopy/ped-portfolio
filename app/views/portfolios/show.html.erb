<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <%#= @portfolio_item.inspect %>
      <em><%= @portfolio_item.title %></em>
      <p><%= @portfolio_item.body %></p>
      <h2>Technologies used</h2>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name%></p>
      <% end %>

      <%= link_to "BACK", portfolios_path %>
      <% if logged_in?(:site_admin) %>
         | <%= link_to "EDIT", edit_portfolio_path(@portfolio_item[:id]) if logged_in?(:site_admin) %> |
        <%= link_to "DELETE", portfolio_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure mofo?"} if logged_in?(:site_admin) %>
      <% end %>
    </div>
  </div>
</div>
